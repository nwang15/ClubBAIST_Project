@page "{applicationId:int}"
@model GolfBAIST_Project.Pages.Admin.UpdateMemberApplicationModel
@{
}




@if (Model.MemberApplications != null)
{
<form class="row g-3" method="post">
    <p></p>
    <p>Personal Information</p>

    <div class="col-md-4">
        <label for="userId" class="form-label">User Id</label>
        <input type="text" class="form-control" id="userId" asp-for="MemberApplications.Id" readonly>
    </div>

    <div class="col-md-4">
        <label for="applicationId" class="form-label">Application Id</label>
        <input type="text" class="form-control" id="applicationId" asp-for="MemberApplications.ApplicationId" readonly>
    </div>
    <p></p>
    <p></p>
    <div class="col-md-4">
        <label for="membershipType" class="form-label">Membership Type</label>
        <select id="membershipType" class="form-select" asp-for="MemberApplications.MembershipType">
            <option selected>Choose...</option>
            <option>Bronze</option>
            <option>Sliver</option>
            <option>Gold</option>
        </select>
    </div>
    <div class="col-md-4">
        <label for="applicationStatus" class="form-label">Application Status</label>
        <select id="applicationStatus" class="form-select" asp-for="MemberApplications.ApplicationStatus">
            <option selected>Choose...</option>
            <option>Accepted</option>
            <option>Denied</option>
            <option>On Hold</option>
            <option>Waitlisted</option>
        </select>
    </div>
    <p></p>
    <div class="col-md-6">
        <label for="firstName" class="form-label">First Name</label>
        <input type="text" class="form-control" id="firstName" asp-for="MemberApplications.MemberFirstName">
    </div>
    <div class="col-md-6">
        <label for="lastName" class="form-label">Last Name</label>
        <input type="text" class="form-control" id="lastName" asp-for="MemberApplications.MemberLastName">
    </div>
    <div class="col-12">
        <label for="personalAddress" class="form-label">Address</label>
        <input type="text" class="form-control" id="personalAddress" placeholder="1234 Main St" asp-for="MemberApplications.MemberAddress">
    </div>
    <div class="col-md-6">
        <label for="personalCity" class="form-label">City</label>
        <input type="text" class="form-control" id="personalCity" asp-for="MemberApplications.MemberCity">
    </div>
    <div class="col-md-4">
        <label for="personalProvince" class="form-label">Province</label>
        <select id="personalProvince" class="form-select" asp-for="MemberApplications.MemberProvince">
            <option selected>Choose...</option>
                <option>Alberta</option>
                <option>British Columbia</option>
                <option>Manitoba</option>
                <option>New Brunswick</option>
                <option>Newfoundland and Labrador</option>
                <option>Nova Scotia</option>
                <option>Ontario</option>
                <option>Prince Edward Island</option>
                <option>Quebec</option>
                <option>Saskatchewan</option>
        </select>
    </div>
    <div class="col-md-2">
        <label for="personalPostalCode" class="form-label">Postal Code</label>
        <input type="text" class="form-control" id="personalPostalCode" asp-for="MemberApplications.MemberPostalCode">
    </div>
    <div class="col-md-4">
        <label for="dob" class="form-label">Date Of Birth</label>
        <input type="date" class="form-control" id="dob" asp-for="MemberApplications.MemberDOB">
    </div>
    <div class="col-md-4">
        <label for="phoneNumber" class="form-label">Phone Number</label>
        <input type="tel" class="form-control" id="phoneNumber" asp-for="MemberApplications.MemberPhoneNumber">
    </div>
    <div class="col-md-4">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" asp-for="MemberApplications.MemberEmail">
    </div>
    <p></p>
    <p>Company Information</p>
    <div class="col-md-6">
        <label for="companyName" class="form-label">Company Name</label>
        <input type="text" class="form-control" id="companyName" asp-for="MemberApplications.CompanyName">
    </div>
    <div class="col-md-6">
        <label for="occupation" class="form-label">Occupation</label>
        <input type="text" class="form-control" id="occupation" asp-for="MemberApplications.Occupation">
    </div>
    <div class="col-12">
        <label for="companyAddress" class="form-label">Address</label>
        <input type="text" class="form-control" id="companyAddress" placeholder="1234 Main St" asp-for="MemberApplications.CompanyAddress">
    </div>
    <div class="col-md-6">
        <label for="companyCity" class="form-label">City</label>
        <input type="text" class="form-control" id="companyCity" asp-for="MemberApplications.CompanyCity">
    </div>
    <div class="col-md-4">
        <label for="companyProvince" class="form-label">Province</label>
        <select id="companyProvince" class="form-select" asp-for="MemberApplications.CompanyProvince">
            <option selected>Choose...</option>
            <option>Alberta</option>
                <option>British Columbia</option>
                <option>Manitoba</option>
                <option>New Brunswick</option>
                <option>Newfoundland and Labrador</option>
                <option>Nova Scotia</option>
                <option>Ontario</option>
                <option>Prince Edward Island</option>
                <option>Quebec</option>
                <option>Saskatchewan</option>
        </select>
    </div>
    <div class="col-md-2">
        <label for="companyPostalCode" class="form-label">Postal Code</label>
        <input type="text" class="form-control" id="companyPostalCode" asp-for="MemberApplications.CompanyPostalCode">
    </div>

    <div class="col-md-4">
        <label for="companyPhoneNumber" class="form-label">Phone Number</label>
        <input type="tel" class="form-control" id="companyPhoneNumber" asp-for="MemberApplications.CompanyPhoneNumber">
    </div>
    <p></p>

    <div class="col-md-4">
        <label for="memberSignature" class="form-label">Signature</label>
        <input type="text" class="form-control" id="memberSignature" asp-for="MemberApplications.MemberSignature">
    </div>

    <div class="col-md-4">
        <label for="memberSignatureDate" class="form-label">Date</label>
        <input type="date" class="form-control" id="memberSignatureDate" asp-for="MemberApplications.MemberSignDate">
    </div>


    <p></p>
    <p>Reference Information</p>

    <div class="col-md-6">
        <label for="firstShareHolderName" class="form-label">First Share Holder Name</label>
        <input type="text" class="form-control" id="firstShareHolderName" asp-for="MemberApplications.FirstShareholderFullName">
    </div>
    <div class="col-md-6">
        <label for="secondShareHolderName" class="form-label">Second Share Holder Name</label>
        <input type="text" class="form-control" id="secondShareHolderName" asp-for="MemberApplications.SecondShareholderFullName">
    </div>

    <div class="col-md-6">
        <label for="firstShareHolderDate" class="form-label">Date</label>
        <input type="date" class="form-control" id="firstShareHolderDate" asp-for="MemberApplications.FirstShareholderSignDate">
    </div>
    <div class="col-md-6">
        <label for="secondShareHolderDate" class="form-label">Date</label>
        <input type="date" class="form-control" id="secondShareHolderDate" asp-for="MemberApplications.SecondShareholderSignDate">
    </div>
    <p></p>

    <div class="col-12">
        <button type="submit" class="btn btn-primary" asp-page-handler="Edit">Update Application</button>
            <button type="submit" class="btn btn-danger" asp-page-handler="Delete">Remove Application From System</button>
    </div>


</form>
}
else
{
    <div class="container">
        <p>Member Application Not Found!</p>
    </div>
}