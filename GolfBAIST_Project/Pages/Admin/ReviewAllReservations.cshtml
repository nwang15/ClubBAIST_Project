@page
@model GolfBAIST_Project.Pages.Admin.ReviewAllReservationsModel
@{
}


<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>Reservation Id</td>
                <td>Reservation Date</td>
                <td>Reservation Time</td>
                <td>Players</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model.Reservations)
            {
            <tr>
                <td>@reservation.ReservationId</td>
                <td>@reservation.reservationDate</td>
                <td>@reservation.TimeRange</td>
                    <td>@reservation.Players</td>
                <td><a href="/Admin/UpdateMemberReservation/@reservation.ReservationId">View</a></td>
            </tr>
            }
        </tbody>
    </table>
</div>