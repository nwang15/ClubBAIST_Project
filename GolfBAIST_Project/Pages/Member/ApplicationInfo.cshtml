@page "{applicationId:int}"
@model GolfBAIST_Project.Pages.Member.ApplicationInfoModel
@{
}



<form method="post">
    <p></p>
    <h2>Personal Information</h2>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="userId" class="form-label">User Id</label>
            <input type="text" class="form-control" id="userId" asp-for="MemberApplications.Id" readonly>
        </div>

        <div class="form-group col-md-4">
            <label for="applicationId" class="form-label">Application Id</label>
            <input type="text" class="form-control" id="applicationId" asp-for="MemberApplications.ApplicationId" readonly>
        </div>
        <p></p>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="membershipType" class="form-label">Membership Type</label>
            <input type="text" class="form-control" id="membershipType" asp-for="MemberApplications.MembershipType" readonly>
        </div>
        <div class="form-group col-md-4">
            <label for="applicationStatus" class="form-label">Application Status</label>
            <input type="text" class="form-control" id="applicationStatus" asp-for="MemberApplications.ApplicationStatus" readonly>
        </div>
    </div>
    <p></p>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="firstName" class="form-label">First Name</label>
            <input type="text" class="form-control" id="firstName" asp-for="MemberApplications.MemberFirstName" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="lastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" id="lastName" asp-for="MemberApplications.MemberLastName" readonly>
        </div>
    </div>
    <div class="form-group">
        <label for="personalAddress" class="form-label">Address</label>
        <input type="text" class="form-control" id="personalAddress" placeholder="1234 Main St" asp-for="MemberApplications.MemberAddress" readonly>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="personalCity" class="form-label">City</label>
            <input type="text" class="form-control" id="personalCity" asp-for="MemberApplications.MemberCity" readonly>
        </div>
        <div class="form-group col-md-4">
            <label for="personalProvince" class="form-label">Province</label>
            <input type="text" class="form-control" id="personalProvince" asp-for="MemberApplications.MemberProvince" readonly>
        </div>
        <div class="form-group col-md-4">
            <label for="personalPostalCode" class="form-label">Postal Code</label>
            <input type="text" class="form-control" id="personalPostalCode" asp-for="MemberApplications.MemberPostalCode" readonly>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="dob" class="form-label">Date Of Birth</label>
            <input type="date" class="form-control" id="dob" asp-for="MemberApplications.MemberDOB" readonly>
        </div>
        <div class="form-group col-md-4">
            <label for="phoneNumber" class="form-label">Phone Number</label>
            <input type="tel" class="form-control" id="phoneNumber" asp-for="MemberApplications.MemberPhoneNumber" readonly>
        </div>
        <div class="form-group col-md-4">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" asp-for="MemberApplications.MemberEmail" readonly>
        </div>
    </div>
    <p></p>
    <h2>Company Information</h2>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="companyName" class="form-label">Company Name</label>
            <input type="text" class="form-control" id="companyName" asp-for="MemberApplications.CompanyName" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="occupation" class="form-label">Occupation</label>
            <input type="text" class="form-control" id="occupation" asp-for="MemberApplications.Occupation" readonly>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-8">
            <label for="companyAddress" class="form-label">Address</label>
            <input type="text" class="form-control" id="companyAddress" placeholder="1234 Main St" asp-for="MemberApplications.CompanyAddress" readonly>
        </div>
        <div class="form-group col-md-4">
            <label for="companyCity" class="form-label">City</label>
            <input type="text" class="form-control" id="companyCity" asp-for="MemberApplications.CompanyCity" readonly>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="companyProvince" class="form-label">Province</label>
            <input type="text" class="form-control" id="companyProvince" asp-for="MemberApplications.CompanyProvince" readonly>
        </div>
        <div class="form-group col-md-4">
            <label for="companyPostalCode" class="form-label">Postal Code</label>
            <input type="text" class="form-control" id="companyPostalCode" asp-for="MemberApplications.CompanyPostalCode" readonly>
        </div>

        <div class="form-group col-md-4">
            <label for="companyPhoneNumber" class="form-label">Phone Number</label>
            <input type="tel" class="form-control" id="companyPhoneNumber" asp-for="MemberApplications.CompanyPhoneNumber" readonly>
        </div>
    </div>
    <p></p>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="memberSignature" class="form-label">Signature</label>
            <input type="text" class="form-control" id="memberSignature" asp-for="MemberApplications.MemberSignature" readonly>
        </div>

        <div class="form-group col-md-4">
            <label for="memberSignatureDate" class="form-label">Date</label>
            <input type="date" class="form-control" id="memberSignatureDate" asp-for="MemberApplications.MemberSignDate" readonly>
        </div>
    </div>

    <p></p>
    <h2>Reference Information</h2>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="firstShareHolderName" class="form-label">First Share Holder Name</label>
            <input type="text" class="form-control" id="firstShareHolderName" asp-for="MemberApplications.FirstShareholderFullName" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="secondShareHolderName" class="form-label">Second Share Holder Name</label>
            <input type="text" class="form-control" id="secondShareHolderName" asp-for="MemberApplications.SecondShareholderFullName" readonly>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="firstShareHolderDate" class="form-label">Date</label>
            <input type="date" class="form-control" id="firstShareHolderDate" asp-for="MemberApplications.FirstShareholderSignDate" readonly>
        </div>
        <div class="form-group col-md-6">
            <label for="secondShareHolderDate" class="form-label">Date</label>
            <input type="date" class="form-control" id="secondShareHolderDate" asp-for="MemberApplications.SecondShareholderSignDate" readonly>
        </div>
        <p></p>

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Withdraw Application</button>
    </div>



</form>