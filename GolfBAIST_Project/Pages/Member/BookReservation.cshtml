@page
@model GolfBAIST_Project.Pages.Member.BookReservationModel
@{
}


@section Scripts
    {
    @*<link href="~/lib/jquery/dist/jquery.timepicker.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.timepicker.js"></script>*@
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery/dist/jquery.timepicker.js"></script>
    <link href="~/lib/jquery/dist/jquery.timepicker.css" rel="stylesheet" />
    <script type="text/javascript">

        //Gold Start Time
        $(document).ready(function () {
            $('#goldStartTime').timepicker({});
        });

        $('#goldStartTime').timepicker({
            timeFormat: 'h:mm p',
            interval: 8,
            minTime: '10',
            maxTime: '6:00pm',
            defaultTime: '11',
            startTime: '10:00',
            dynamic: false,
            dropdown: true,
            scrollbar: true
        });

        //Bronze Start Time
        //from 7am - 3pm
        $(document).ready(function () {
            $('#bronzeStartTime').timepicker({
                step: 8,
                minTime: '10:00am',
                maxTime: '9:00pm',
                defaultTime: false,
                startTime: '10:00',
                dynamic: false,
                dropdown: true,
                scrollbar: true,
                disableTimeRanges: [
                    ['11:00am', '13:30pm'],
                    ['4:20pm', '5:00pm']
                ],
            });
        });

        
      
        //Bronze End Time
        //#1 from 7am - 3pm
        $(document).ready(function () {
            $('#bronzeEndTime1').timepicker({});
        });
        $('#bronzeEndTime1').timepicker({
            timeFormat: 'h:mm p',
            interval: 8,
            minTime: '7',
            maxTime: '3:00pm',
            defaultTime: '7',
            startTime: '7:00',
            dynamic: false,
            dropdown: true,
            scrollbar: true
        });


