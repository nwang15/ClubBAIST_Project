@page
@model GolfBAIST_Project.Pages.Member.MemberReservationReportModel
@{
}


@Model.memberId
<form class="form-inline" method="post">
    <input type="hidden" name="memberId" value="@Model.memberId" asp-for="@Model.memberId" />

    <div class="form-group mb-2">
        <label for="startDate">Start Date</label>
        <input type="date" class="form-control" id="startDate" value="" asp-for="@Model.StartDate">
    </div>
    <div class="form-group mx-sm-3 mb-2">
        <label for="endDate">End Date</label>
        <input type="date" class="form-control" id="endDate" value="" asp-for="@Model.EndDate">
    </div>
    <button type="submit" class="btn btn-dark">Generate Your Score Report</button>
</form>
<p></p>
<div>
    <div>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Member Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Date</th>
                    
                </tr>
            </thead>
            <tbody>
                @if (Model.reservations != null)
                {
                    @foreach (var reservation in Model.reservations)
                    {
                        <tr class="panel-flex">
                            <td>@reservation.MembersInfoMemberId</td>
                            <td>@Model.lastName@Model.firstName </td>
                            <td>@reservation.reservationDate</td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>